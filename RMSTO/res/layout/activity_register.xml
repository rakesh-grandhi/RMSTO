<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgr"
    android:id="@+id/RelativeLayout01"  >

    
    
 
      
        <LinearLayout 
            android:orientation="vertical" 
            android:id="@+id/LinearLayout01" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
             android:layout_marginTop="30.0dip">
        
            <EditText
                android:id="@+id/ETRUsername"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginTop="5.0dip"
                android:hint="UserID"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingLeft="6.0dip"
               
               />
            
            <EditText
                android:id="@+id/ETREmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginTop="5.0dip"
                android:hint="EMail"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingLeft="6.0dip"
               
               />
            
            <EditText
                android:id="@+id/ETRpassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginTop="5.0dip"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingBottom="6.0dip"
                android:singleLine="true"
                 />
            
            <TextView 
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:id="@+id/TextView01" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="10.0dip" 
                android:layout_marginTop="5.0dip" 
                android:text="Profile" />
            
      </LinearLayout>
     
         <LinearLayout 
             
            android:orientation="vertical" 
            android:id="@+id/LinearLayout02" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
             android:layout_marginTop="5.0dip"
             android:layout_below="@+id/LinearLayout01">
          
           <EditText
                android:id="@+id/ETRfirstname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginTop="5.0dip"
                android:hint="First Name"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingBottom="6.0dip"
                android:singleLine="true"
                 />
           
           <EditText
                android:id="@+id/ETRlastname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginTop="5.0dip"
                android:hint="Last Name"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingBottom="6.0dip"
                android:singleLine="true"
                />
           
           <EditText
                android:id="@+id/ETRaccountnum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginTop="5.0dip"
                android:hint="Account #                           Optional"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingBottom="6.0dip"
                android:singleLine="true"
                 />
             
         <EditText
             android:id="@+id/ETRaddress"
             
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/LinearLayout01"
             android:layout_marginLeft="8dp"
             android:layout_marginRight="8.0dip"
             android:layout_marginTop="14dp"
             android:ems="10"
             android:hint="Address                              Optional"
             >

             <requestFocus />
         </EditText>
         
          </LinearLayout>
        
         <LinearLayout
             android:id="@+id/LinearLayout03"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/LinearLayout02"
             android:layout_marginTop="10dp"
             android:orientation="vertical"
             android:layout_centerHorizontal="true"
             android:gravity="center" >

             <Button
                 android:id="@+id/Register"
                 android:layout_width="wrap_content"
                 android:layout_height="30.0dip"
                
                 android:layout_marginTop="9.0dip"
                 android:layout_weight="1"
                 android:background="@drawable/register"
                 android:onClick="Registeruser" />
             
             <TextView
            android:id="@+id/TVforgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:layout_marginTop="10.0dip"
            android:clickable="true"
            android:gravity="center"
            android:text="Forgot Password?"
            android:textColor="#ff4A23E4"
            android:textStyle="bold" />
             
         </LinearLayout>

        
         
         
             
           

           
         
         

</RelativeLayout>

